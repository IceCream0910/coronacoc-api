{
    "version": 2,
    "builds": [{ "src": "index.js", "use": "@now/node" }],
    "rewrites": [{ "source": "/api/(.*)", "destination": "/api" }],
    "routes": [{
            "src": "/streams",
            "dest": "/index.js",
            "methods": ["GET"]
        },
        {
            "src": "/stream",
            "dest": "/index.js",
            "methods": ["POST"]
        }
    ]
}